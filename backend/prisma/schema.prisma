datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Sector {
  id              Int               @id @default(autoincrement())
  name            String            @unique
  employee_Sector Employee_Sector[]
}

model Employee {
  id                Int               @id @default(autoincrement())
  name              String
  document_type     Int
  document_number   String
  current_hours_off Int
  position_name     String
  holidays_typeId   Int
  employee_Sector   Employee_Sector[]
  holidays_type     Holidays_type     @relation(fields: [holidays_typeId], references: [id])
  Leave_request     Leave_request[]
}

model Employee_Sector {
  id          Int      @id @default(autoincrement())
  employeeId  Int
  sectortorId Int
  isManager   Boolean
  employee    Employee @relation(fields: [employeeId], references: [id])
  sector      Sector   @relation(fields: [sectortorId], references: [id])
}

model Holidays_type {
  id                 Int        @id @default(autoincrement())
  name               String
  amount_of_days_off Int
  country            String
  Employee           Employee[]
}

model Leave_request {
  id                  Int      @id @default(autoincrement())
  employeeId          Int
  start_daye          DateTime
  end_date            DateTime
  hours_off_requested Decimal
  status              String
  employee            Employee @relation(fields: [employeeId], references: [id])
}
